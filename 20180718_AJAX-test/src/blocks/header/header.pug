mixin header(data)

		+b('header').header
			+e.wrapper
				+b.menu-decor
					+e.icon
						+e.hamburger
							span
							span
							span
							span

				if data.header
					+e('img').logo(src=data.header.logo)

				if data.menu
					+e('ul').menu
						each item in data.menu
							+e.menu-item
								+e.link(href=item.url)= item.title


