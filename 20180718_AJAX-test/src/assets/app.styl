@import '../globals/*'
@import '../blocks/**/*'

html{
  margin: 0;
  padding: 0;
  font-size: 16px;
}
body {
  margin: 0;
  padding: 0;
  color: $textColor;
  font-family: 'Montserrat', sans-serif;
  min-width: 320px;
  overflow-x: hidden;
  
  display: flex;
  flex-direction: column;
  position: relative;
  color: #000;
}

/* sticky footer */
html,
body {
  height: 100%;
}


main {
  flex: 1 0 auto;
  padding-top 200px
}

