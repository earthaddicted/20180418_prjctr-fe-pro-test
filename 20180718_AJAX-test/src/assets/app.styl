a,
a:link,
a:visited,
a:focus,
button {
    cursor: pointer;
    text-decoration: none;
}

a {
    @include transition-ease-in-out;
}

/* sticky footer END */

* {
    box-sizing: border-box;
    list-style: none;
    font-family: 'Montserrat', sans-serif;

    &:focus,
    &:hover {
        outline: none;
    }
}

.section__wrap {
  width 100%
  margin auto
  max-width 1170px
  padding 20px
}